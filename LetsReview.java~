import java.util.*;

public class LetsReview{
  public static void main(String[]args){
    
    Scanner scan = new Scanner(System.in);
    
    int testCase;
    for(int j=0;j<testCase;j++){
      String s = nextLine();
      
      for(int i=0;i<s.length();i++){
        if(i%2==0){
          System.out.print(s[i]);
        }else{
          System.out.print(s[i]);
        }
      }
    }
    
    scan.close();
  }
}